<div class="panel panel-default">
  <div class="panel-heading">
  Create your beautiful Warehouse(Ghala)
  </div>
  <div class="panel-body">
<div class="container">
  <%= form_for @warehouse do |f| %>
  <% if @warehouse.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@warehouse.errors.count, "error") %> prohibited this warehouse from being saved:</h2>

      <ul>
      <% @warehouse.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="row">
<div class="col-md-6">
  <div class="form-group">

  <%= f.label :total_size %>
  <%= f.number_field :total_size, placeholder:"Total Size in Cubic Feet", class:"form-control" %>
</div>

  </div>
  <div class="col-md-6">
  <div class="form-group">
  <%= f.label :warehousecategory, "Warehouse Category" %>
  <%= f.collection_select(:warehousecategory, WarehouseCategory.all, :id, :category, {:selected =>1}, {:class=>'form-control',:id=>"my_company", :prompt=>"select", :title =>"Field is populated automatically"}) %>
</div>

  </div>

</div>

  <div class="form-group">
    <%= f.label :youtube_url %>
    <%= f.text_field :youtube_url,placeholder:"https://youtube.com", class:"form-control" %>
  </div>

<!--  <div class="form-group">


  <%# f.collection_select(:company_id, Company.all, :id, :company_name, {:selected =>1}, {:class=>'form-control',:id=>"my_company", :prompt=>"select", :title =>"Field is populated automatically"}) %>

</div>-->



  <div class="row">

  <div class="col-md-4 select">


  <div class="form-group">


  <label> Warehouse Type</label><br/>
  <%= f.collection_select(:warehousetypes, Warehousetype.all, :id, :type_item, {:selected =>1}, {:class=>'form-control',:id=>"warehouse_type",multiple:"multiple", :prompt=>"select", :title =>"Field is populated automatically"}) %>

  </div>



  </div>

  <div class="col-md-4 select">
              <div class="form-group">
                <label>Booking Type</label>
                <%= f.select :instant, Warehouse.instants.map {|key,value| [key.humanize, key]}, selected: 'Instant', prompt: "Select...", class: "form-control" %>
              </div>
            </div>
  <div class="col-md-4 select">
  <div class="form-group">

  <label> Sector Experience</label><br/>
  <%= f.collection_select(:sectorexperiences, SectorExperience.all, :id, :experience_item, {:selected =>1}, {:class=>'form-control',:id=>"experience_items",multiple:"multiple", :prompt=>"select", :title =>"Field is populated automatically"}) %>

  </div>
  </div>
  </div>




  <div>
    <% f.hidden_field :user_id, value: current_user.id %>
    <%= f.submit "Save", class: "btn btn-normal" %>
    </div>
  <% end %>


</div>

  </div>
</div>
