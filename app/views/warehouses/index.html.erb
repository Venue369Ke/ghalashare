<p id="notice"><%= notice %></p>
<div class="row">
<div class="col-md-3">
  <ul class="sidebar-list">
    <li class="sidebar-item">
      <%= link_to "Your Listings",warehouses_path, class:"sidebar-link active" %>

    </li>
    <li class="sidebar-item">

      <%= link_to "Your Reservations",your_reservations_path, class:"sidebar-link " %>
    </li>
    <li class="sidebar-item">

      <%= link_to "Your Storage Locations",your_storages_path, class:"sidebar-link " %>
    </li>
  </ul>
</div>
<div class="col-md-9">
<div class="panel panel-default">
  <div class="panel-heading">
    Listings
  </div>
<div class="panel-body">
  <% if @warehouses.blank? %>
<%= link_to "Oops! It's lonely here :(, click to add listing", new_warehouse_path %>

  <% end %>
  <% @warehouses.each do |warehouse|  %>

  <div class="row">
    <div class="col-md-2">
      <%= image_tag warehouse.cover_photo(:thumb) %>
    </div>

    <div class="col-md-7">
      <h4><%= warehouse.title %></h4>
    </div>
    <div class="col-md-3 right">
      <%= link_to "Update", listing_warehouse_path(warehouse), class: "btn btn-form" %>
    </div>
  </div>
<hr/>
  <% end %>

</div>

</div>

</div>
