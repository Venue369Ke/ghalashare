<div class="row">

  <div class="col-md-3">
    <%= render 'warehouse_menu' %>

  </div>

  <div class="col-md-9">
    <div class="panel panel-default">

      <div class="panel-heading">

    Amenities/Certifications Awarded/ Services
      </div>

      <div class="panel-body">
        <div class="container">

<%= form_for @warehouse do |f| %>
<div class="row">



  <div class="col-md-6 select">
  <div class="form-group">

  <label> Certificates Awarded</label> <br/>

  <%= f.collection_select(:certificates, Certificate.all, :id, :cert_item, {:selected =>1}, {:class=>'form-control',:id=>"cert_items",multiple:"multiple", :prompt=>"select", :title =>"Field is populated automatically"}) %>

  </div>
  </div>
  <div class="col-md-6 select">
    <div class="form-group">

    <label> Configuration</label> <br/>

    <%= f.collection_select(:configs, Config.all, :id, :config_item, {:selected =>1}, {:class=>'form-control',:id=>"config_items",multiple:"multiple", :prompt=>"select", :title =>"Field is populated automatically"}) %>

    </div>
  </div>
  </div>
  <hr/>


  <div class="row">

    <div class="col-md-6 select">
      <div class="form-group">

      <label> Equipment available</label> <br/>

      <%= f.collection_select(:equipment, Equipment.all, :id, :equipment_item, {:selected =>1}, {:class=>'form-control',:id=>"equip_items",multiple:"multiple", :prompt=>"select", :title =>"Field is populated automatically"}) %>

      </div>
    </div>
    <div class="col-md-6 select">
      <div class="form-group">

      <label> Accessible via</label> <br/>

      <%= f.collection_select(:connections, Connection.all, :id, :connection_item, {:selected =>1}, {:class=>'form-control',:id=>"accessibility_items",multiple:"multiple", :prompt=>"select", :title =>"Field is populated automatically"}) %>

      </div>
    </div>

  </div>
  <hr/>

  <div class="row">
    <div class="col-md-4"></div>
    <div class="form-group">

    <label> Services Available</label> <br/>

    <%= f.collection_select(:services, Service.all, :id, :service_item, {:selected =>1}, {:class=>'form-control',:id=>"service_items",multiple:"multiple", :prompt=>"select", :title =>"Field is populated automatically"}) %>

    </div>
  </div>

  <div class="text-center">
    <%= f.submit "Save", class: "btn btn-form"%>
  </div>

<% end %>
      </div>

    </div>

  </div>
</div>

